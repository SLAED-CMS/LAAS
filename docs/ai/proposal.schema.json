{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://laas-cms.org/schemas/proposal.schema.json",
  "title": "Proposal",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "created_at",
    "kind",
    "summary",
    "file_changes",
    "entity_changes",
    "warnings",
    "confidence",
    "risk"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 8
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "kind": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string"
    },
    "file_changes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "op",
          "path"
        ],
        "properties": {
          "op": {
            "type": "string",
            "enum": [
              "create",
              "update",
              "delete"
            ]
          },
          "path": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "op": {
                  "enum": [
                    "create",
                    "update"
                  ]
                }
              }
            },
            "then": {
              "required": [
                "content"
              ]
            }
          }
        ]
      }
    },
    "entity_changes": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "risk": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    }
  }
}
