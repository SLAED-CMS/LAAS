{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LAAS Theme API v2",
  "type": "object",
  "required": [
    "name",
    "version",
    "api"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?(\\+[0-9A-Za-z.-]+)?$"
    },
    "api": {
      "type": "string",
      "const": "v2"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "provides": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "meta": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
