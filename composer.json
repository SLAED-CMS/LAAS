{
  "name": "laas/laas",
  "description": "LAAS CMS core",
  "license": "MIT",
  "homepage": "https://laas-cms.org",
  "authors": [
    {
      "name": "Eduard Laas",
      "homepage": "https://laas-cms.org"
    }
  ],
  "type": "project",
  "require": {
    "php": "^8.4",
    "nikic/fast-route": "^1.3",
    "monolog/monolog": "^3.9",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "Laas\\": "src/",
      "Laas\\Modules\\": "modules/"
    }
  },
  "scripts": {
    "qa:cs": "php-cs-fixer fix --dry-run --diff",
    "qa:stan": "phpstan analyse -c phpstan.neon",
    "qa": [
      "composer qa:cs",
      "composer qa:stan"
    ],
    "test:unit": "vendor/bin/phpunit --testsuite Unit --exclude-group policy,perf,perf-budgets,githygiene",
    "test:all": "vendor/bin/phpunit",
    "test": "composer test:unit"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.5",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.92"
  }
}
