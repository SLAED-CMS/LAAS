<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true" defaultTestSuite="Full">
  <testsuites>
    <testsuite name="Unit">
      <directory>tests</directory>
      <exclude>tests/Cli</exclude>
      <exclude>tests/Perf</exclude>
      <exclude>tests/Policy</exclude>
      <exclude>tests/DbIndexesPreflightProdFailTest.php</exclude>
      <exclude>tests/PermissionsCacheTest.php</exclude>
    </testsuite>
    <testsuite name="Full">
      <directory>tests</directory>
    </testsuite>
</testsuites>
  <php>
    <env name="RATE_LIMIT_ENABLED" value="0"/>
  </php>
  <source>
    <include>
      <directory suffix=".php">src</directory>
      <directory suffix=".php">modules</directory>
      <directory suffix=".php">tools</directory>
    </include>
    <exclude>
      <directory suffix=".php">vendor</directory>
      <directory suffix=".php">themes</directory>
      <directory suffix=".php">storage</directory>
      <directory suffix=".php">tests/Fixtures</directory>
    </exclude>
  </source>
</phpunit>
